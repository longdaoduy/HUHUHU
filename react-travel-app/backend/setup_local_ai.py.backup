#!/usr/bin/env python3
"""
Setup script to install TensorFlow and dependencies for Local AI Model
"""

import subprocess
import sys

print("=" * 60)
print("Installing TensorFlow for Local AI Image Recognition")
print("=" * 60)
print()
print("This will install:")
print("  - TensorFlow (AI model for image recognition)")
print("  - NumPy (numerical computing)")
print("  - Pillow (image processing)")
print()
print("This may take 5-10 minutes on first install...")
print()

packages = ["tensorflow", "pillow", "numpy"]

for package in packages:
    print(f"Installing {package}...")
    try:
        subprocess.check_call([sys.executable, "-m", "pip", "install", package, "-q"])
        print(f"‚úÖ {package} installed successfully")
    except subprocess.CalledProcessError as e:
        print(f"‚ùå Failed to install {package}: {e}")
        sys.exit(1)

print()
print("=" * 60)
print("‚úÖ All dependencies installed successfully!")
print("=" * 60)
print()
print("Next steps:")
print("1. Go to backend folder: cd react-travel-app/backend")
print("2. Run the server: python main.py")
print("3. Open your app and upload images to scan")
print("4. Landmarks will be auto-detected using local AI model!")
print()
print("NO MORE API KEY NEEDED! üéâ")
print()
